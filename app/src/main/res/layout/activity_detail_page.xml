<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/parentLayoutWidthMatchStyling"
    android:orientation="vertical">

    <android.support.v7.widget.CardView style="@style/CardViewStyleFromBottom">

        <FrameLayout
            android:id="@+id/framelayout.model"
            style="@style/parentLayoutWidthMatchStyling"
            android:background="@color/white"
            android:paddingBottom="@dimen/padding_large" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView style="@style/CardViewStyle">

        <FrameLayout
            android:id="@+id/flDescriptionCars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView style="@style/CardViewStyle">

        <FrameLayout
            android:id="@+id/flRecommededCars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView style="@style/CardViewStyle">

        <FrameLayout
            android:id="@+id/flVehicleOverview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView style="@style/CardViewStyle">

        <FrameLayout
            android:id="@+id/flVehicleCertified"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView style="@style/CardViewStyle">

        <FrameLayout
            android:id="@+id/flFeaturesSpecifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>

</LinearLayout>